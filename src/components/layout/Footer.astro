---
import { SITE, FOOTER_LINKS } from '../../constants/site';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-12 px-0 mt-auto">
  <div class="container">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12 mb-8">
      <!-- About Section -->
      <div class="flex flex-col gap-4">
        <h3 class="text-base font-semibold text-white mb-2">About {SITE.name}</h3>
        <p class="text-sm leading-relaxed text-white/90">
          {SITE.mission}
        </p>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col gap-4">
        <h3 class="text-base font-semibold text-white mb-2">Quick Links</h3>
        <ul class="list-none p-0 m-0 flex flex-col gap-2">
          {FOOTER_LINKS.quickLinks.map((link) => (
            <li><a href={link.href} class="text-sm text-white/90 no-underline hover:text-white hover:underline transition-colors">{link.label}</a></li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div class="flex flex-col gap-4">
        <h3 class="text-base font-semibold text-white mb-2">Resources</h3>
        <ul class="list-none p-0 m-0 flex flex-col gap-2">
          {FOOTER_LINKS.resources.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-white/90 no-underline hover:text-white hover:underline transition-colors"
                {... link.external && { target: '_blank', rel: 'noopener noreferrer' }}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact/Social -->
      <div class="flex flex-col gap-4">
        <h3 class="text-base font-semibold text-white mb-2">Connect</h3>
        <div class="flex gap-3">
          {SITE.social.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-9 h-9 bg-white/10 rounded-lg text-white hover:bg-white/20 transition-colors"
              aria-label={social.name}
              title={social.handle}
            >
              <i class={`${social.icon} text-lg`}></i>
            </a>
          ))}
        </div>
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-4 pt-8 border-t border-white/10 text-center md:text-left">
      <p class="text-sm text-white/80 m-0">
        &copy; {currentYear} {SITE.fullName} ({SITE.name}). All rights reserved.
      </p>
      <div class="flex items-center gap-2 text-sm text-white/80">
        {FOOTER_LINKS.legal.map((link, index) => (
          <>
            <a href={link.href} class="text-white/80 no-underline hover:text-white hover:underline transition-colors">{link.label}</a>
            {index < FOOTER_LINKS.legal.length - 1 && <span class="text-white/50">·</span>}
          </>
        ))}
        <span class="text-white/50">·</span>
        <span class="text-white/70">Last updated: {new Date().toLocaleDateString('en-GB')}</span>
      </div>
    </div>
  </div>
</footer>
